@model List<Job>

@{
    ViewData["Title"] = "Show All Jobs";
    Layout = "_ProfileLayout";
    int counter = 1;
}

<h1 class="text-center text-primary my-4">Available Jobs</h1>

<div class="my-3">
    <div class="d-flex justify-content-end mb-3">
        @if (User.IsInRole("Employer") || User.IsInRole("Admin"))
        {
            <a asp-action="AddJob" asp-controller="Job" class="btn btn-success">
                + Add New Job
            </a>
        }
    </div>

    <div class="shadow-sm rounded">
        <table id="jobsTable" class="table table-striped table-bordered align-middle w-100">
            <thead class="table-light">
                <tr>
                    <th>No</th>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Location</th>
                    <th>Salary</th>
                    <th>Experience</th>
                    <th>Requirements</th>
                    <th>Expiry Date</th>
                    <th>Category</th>
                    @if (User.IsInRole("admin"))
                    {
                        <th>Posted By</th>
                    }

                    <th>Edit</th>
                    <th>Delete</th>

                    @* 🔹 العمود الجديد للتقديم على الوظيفة *@
                    @if (User.IsInRole("JobSeeker"))
                    {
                        <th>Apply</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@job.Id</td>
                        <td>@job.Title</td>
                        <td>@job.Location</td>
                        <td>@job.Salary.ToString("C0")</td>
                        <td>@job.Experience</td>
                        <td>
                            @{
                                var reqs = System.Text.RegularExpressions.Regex
                                .Split(job.Requirements ?? "", @",")
                                .Where(s => !string.IsNullOrWhiteSpace(s))
                                .Select(s => s.Trim())
                                .ToList();
                            }
                            @if (reqs.Count > 0)
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var r in reqs)
                                    {
                                        <li><i class="fa-solid fa-circle-check text-success me-1"></i>@r</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">No requirements</span>
                            }
                        </td>
                        <td>@job.ExpiryDate.ToString("yyyy-MM-dd")</td>
                        <td>@job.Category?.Name</td>

                        @if (User.IsInRole("admin"))
                        {
                            <td>@job.PostedUser?.CompanyName</td>
                        }

                        <td>
                            <a class="btn btn-warning btn-sm text-white"
                               asp-action="Update" asp-controller="Job" asp-route-id="@job.Id">
                                EDIT
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Job", new { id = job.Id })"
                               class="btn btn-danger btn-sm delete-job">
                                DELETE
                            </a>
                        </td>

                        @* 🔹 زر Apply يظهر فقط للـ JobSeeker *@
                        @if (User.IsInRole("JobSeeker"))
                        {
                            <td>
                                <a asp-controller="JobApplication"
                                   asp-action="Apply"
                                   asp-route-jobId="@job.Id"
                                   class="btn btn-success btn-sm">
                                    Apply
                                </a>
                            </td>
                        }
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>


