@section Scripts {
    <style>
        /* ================== Table Layout Balanced ================== */
        #jobsTable {
            width: 100% !important;
            table-layout: auto !important; /* خليها auto بدل fixed */
            font-size: 14px;
        }

            #jobsTable th,
            #jobsTable td {
                padding: 6px 8px !important;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                vertical-align: middle;
            }

                /* خليه يسمح للأسطر الطويلة فقط */
