@model List<JobCategory>

@{
    ViewData["Title"] = "ShowAllCategories";
    Layout = "_ProfileLayout";
    int counter = 1;
}

<h1 class="text-center text-primary">Job Categories</h1>

<div class="container-md">
    <div class="row">
        <a asp-action="Add" asp-controller="JobCategory" class="btn btn-success my-2 col-2"> Add New Category</a>
        <table class="table table-striped table-light">
            <thead>
                <tr>
                    <th class="text-center" scope="col">No</th>
                    <th class="text-center" scope="col">ID</th>
                    <th class="text-center" scope="col">Name</th>
                    <th class="text-center" scope="col">Edit</th>
                    <th class="text-center" scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model)
                {
                    <tr class="text-center">
                        <td scope="row">@counter</td>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                            <a asp-action="update" asp-route-id="@category.Id" class="btn btn-warning text-white">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    counter++;
                }

            </tbody>
        </table>
    </div>
    
    </div>
