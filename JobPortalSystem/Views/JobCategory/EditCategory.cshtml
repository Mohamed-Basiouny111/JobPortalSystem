@model JobCategory

@{
    ViewData["Title"] = "EditCategory";
    Layout = "_ProfileLayout";
    
}

<h1 class="text-center text-primary mb-2">Edit JobCategory</h1>
<hr />


<div class="container-md my-3">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="update" asp-controller="JobCategory" method="post" class="border p-4 rounded shadow-sm bg-light">
               

                <div asp-validation-summary="All" class="text-danger mb-2"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control mt-1" />
                    @* <span asp-validation-for="Name" class="text-danger"></span> *@
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4">Add</button>
                    <a asp-action="GetAll" asp-controller="JobCategory" class="btn btn-secondary px-4">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>
