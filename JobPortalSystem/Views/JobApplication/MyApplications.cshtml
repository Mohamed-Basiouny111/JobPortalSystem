@model IEnumerable<JobPortalSystem.Models.JobApplication>
@{
    ViewBag.Title = "My Applications";
}

<div class="container mt-4">
    <h2>My Applications</h2>

    @if (!Model.Any())
    {
        <p>You haven’t applied to any jobs yet.</p>
    }
    else
    {
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Job Title</th>
                    <th>Applied Date</th>
                    <th>Status</th>
                    <th>Cover Letter</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model)
                {
                    <tr>
                        <td>@app.Job?.Title</td>
                        <td>@app.AppliedDate.ToShortDateString()</td>
                        <td>@app.Status</td>
                        <td>@app.CoverLetter</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
