@model JobPortalSystem.ViewModels.ComUserInfo

@{
    Layout = "_ProfileLayout";
    ViewData["Title"] = "CompanyInfo";
}

<h1>Company Information</h1>



<table class="table table-bordered text-center align-middle">
    <thead class="table-light">
        <tr>
            <th>Image</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Company Name</th>
            <th>Company Description</th>
               
            <th>Company Status</th>


            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <img src="@Model.ImgURl"
                     alt="User Photo"
                     width="100"
                     height="100"
                     style="border-radius:50%; object-fit:cover; border:2px solid #ddd;" />

            </td>
            <td>@Model.UserName</td>
            <td>@Model.Email</td>
            <td>@Model.CompanyName</td>
            <td>@Model.CompanyDescription</td>
            <td>@Model.CompanyStatus</td>
            <td> <a class="btn btn-outline-primary" asp-asp-controller="account" asp-action="EditCompany"> <i class="bi bi-pencil-square">Edit</i></a></td>
        </tr>
    </tbody>
</table>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
