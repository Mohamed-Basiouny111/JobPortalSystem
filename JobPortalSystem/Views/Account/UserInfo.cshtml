@model JobPortalSystem.ViewModels.ComUserInfo

@{
    ViewData["Title"] = "User Information";

    Layout = "_ProfileLayout";
}

<h1>User Information</h1>



<table class="table table-bordered text-center align-middle">
    <thead class="table-light">
        <tr>
            <th>Image</th>
            <th>User Name</th>
            <th>Email</th>
            <th>CV</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <img src="@Model.ImgURl"
                     alt="User Photo"
                     width="100"
                     height="100"
                     style="border-radius:50%; object-fit:cover; border:2px solid #ddd;" />

            </td>
            <td>@Model.UserName</td>
            <td>@Model.Email</td>
            <td>
                @if (!string.IsNullOrEmpty(Model.CV))
                {
                    <a href="~/cv/@Model.CV" target="_blank">View CV</a>
                }
                else
                {
                    <a href="javascript:void(0)" class="text-muted" onclick="showNoCVMessage()">View CV</a>
                }
            </td>
            <td> <a class="btn btn-outline-primary" asp-asp-controller="account" asp-action="EditUSerInfo"> <i class="bi bi-pencil-square">Edit</i></a></td>
        </tr>
    </tbody>
</table>

<script>
    function showNoCVMessage() {
        alert("No CV uploaded yet!");
    }
</script>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
