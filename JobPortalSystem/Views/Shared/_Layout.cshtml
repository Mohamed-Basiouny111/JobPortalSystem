<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description"
          content="Welcome to my portfolio website. Here, you'll find a showcase of my latest works and projects, as well as a comprehensive list of my skills and services. Our team of experts is dedicated to delivering high-quality solutions that exceed your expectations. From web design and development to digital marketing and branding, we've got you covered. Browse through our portfolio and get in touch to discuss your next project." />
    <title>@ViewData["Title"] - ALWASIT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="~/Css/swiper.min.css" asp-append-version="true" />
    <!-- Link FontAwesome -->
    <link rel="stylesheet" href="~/Css/all.min.css" asp-append-version="true" />
    <!-- Link Global Style -->
    <link rel="stylesheet" href="~/Css/global.css" asp-append-version="true" />
    <!-- Link Main Style -->
    <link rel="stylesheet" href="~/Css/style.css" asp-append-version="true" />
    <!-- Link Arabic Style -->
    <link rel="stylesheet" class="ar-link" />

    <!-- Toastr CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Toastr JS-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @await RenderSectionAsync("Sheets", required: false)

</head>
<body>
    <!-- Start Header -->
    <header>
        <div class="container">
            <div class="burger-list">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <h1 class="logo">ALWASIT</h1>

            <ul class="nav-bar">

                <li><a class="navbar-brand active link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>

                <li><a href="#about" class="link">about</a></li>
                <li><a href="#service" class="link">service</a></li>
                
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="JobFavorite" asp-action="Index">
                            Favorite Jobs
                        </a>
                    </li>
                

                <li><a href="#work" class="link">work</a></li>
                <partial name="_IdentityPartial" />
            </ul>
            <div class="dark-mode">
                <i class="fa-solid fa-moon dark active"></i>
                <i class="fa-solid fa-sun light"></i>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- Start Home Section -->
    <section class="home" id="home">
        <div class="container">
            <div class="content">
                <h1>
                    HEY,<br />
                    ALWASIT makes job hunting <br /> <span>simple, fast, and reliable </span> <br />
                    for<span> employers and job seekers</span>
                </h1>
                <div class="image">
                    <img src="/Images/ALWASIT.png" alt="ALWASIT Image" />
                </div>
            </div>
            <div class="features">
                <i class="fa-solid fa-star"></i><span>Find the right job</span>
                <i class="fa-solid fa-star"></i><span>Trusted platform for smart hiring</span>
                <i class="fa-solid fa-star"></i><span>Access anywhere, anytime</span>
            </div>
            <div class="discuss">
                <span>Want to discuss?</span>
                <a href="#contact">Let's Talk</a>
            </div>
            <a href="#content" class="go-down">
                <i class="fa-solid fa-angles-down"></i>
            </a>
        </div>
    </section>
    <!-- End Home Section -->
    <section class=".container-fluid" id="content">

        @RenderBody()
    </section>

    <!-- Start Footer -->
    <footer>
        <div class="container">
            <div class="content">
                <div class="left-content">
                    <h1 class="logo">ALWASIT</h1>
                    <p>
                        If you want any kind of our services you can simply send us an
                        email or leave a message on any social media platform.
                    </p>
                    <div class="social">
                        <a href="#"><i class="fa-brands fa-square-facebook"></i></a>
                        <a href="#"><i class="fa-brands fa-square-twitter"></i></a>
                        <a href="#"><i class="fa-brands fa-square-instagram"></i></a>
                        <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                    </div>
                </div>
                <ul class="right-content">
                    <li>
                        <a href="#team">
                            <i class="fa-solid fa-angles-right"></i>
                            Team
                        </a>
                    </li>
                    <li>
                        <a href="#work">
                            <i class="fa-solid fa-angles-right"></i>
                            Works
                        </a>
                    </li>
                    <li>
                        <a href="#skills">
                            <i class="fa-solid fa-angles-right"></i>
                            Skills
                        </a>
                    </li>
                    <li>
                        <a href="#testimonials">
                            <i class="fa-solid fa-angles-right"></i>
                            Testimonials
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="copyright">© 2025 Copyright: all rights reserved.</div>
    </footer>
    <!-- End Footer -->
    <!-- Start Scroll To Top -->
    <span class="scroll-top">
        <i class="fa-solid fa-angle-up"></i>
    </span>
    <!-- End Scroll To Top -->
    <!-- Start Language -->
    <span class="lang">
        <i class="fa-solid fa-globe"></i>
        AR
    </span>

    <partial name="_NotifyPartil" />

    <!-- End Language -->
    <!-- Swiper JS -->
    <script src="~/Js/swiper.min.js"></script>
    <!-- Main JS -->
    <script src="~/Js/main.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>