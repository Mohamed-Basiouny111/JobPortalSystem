@model IEnumerable<JobPortalSystem.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Job Seekers";
    Layout = "_ProfileLayout";
}

<section class="container w-50">
    <h2 class="mb-4">Manage Job Seekers</h2>
    <div class="shadow-sm rounded">

    <table id="jobSeekersTable" class="table table-striped table-bordered align-middle w-80" >
        <thead class="table-dark">
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-pen"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</section>

@section Scripts {
    <!-- Include DataTables only once -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Destroy existing instance (if reloaded via partials)
            if ($.fn.DataTable.isDataTable('#jobSeekersTable')) {
                $('#jobSeekersTable').DataTable().destroy();
            }

            // Initialize DataTable
            $('#jobSeekersTable').DataTable({
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                language: {
                    lengthMenu: "Show _MENU_ entries",
                    search: "Search job seeker:",
                    info: "Showing _START_ to _END_ of _TOTAL_ job seekers",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "Next",
                        previous: "Previous"
                    }
                }
            });
        });
    </script>
}
