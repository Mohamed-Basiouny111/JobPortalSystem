@model IEnumerable<JobPortalSystem.Models.ApplicationUser>

@{
    ViewData["Title"] = "Job Seekers";
}

<h2 class="mb-3">All Job Seekers</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
