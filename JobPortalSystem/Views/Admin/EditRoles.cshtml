@model JobPortalSystem.Controllers.EditUserRolesViewModel
@{
    ViewData["Title"] = "Edit User Roles";
    Layout = "_ProfileLayout";
}

<div class="container mt-5">
    <h3>Edit Roles for <span class="text-primary">@Model.UserName</span></h3>

    <form asp-action="EditRoles" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label class="form-label">Available Roles</label>
            @foreach (var role in Model.AvailableRoles)
            {
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           name="SelectedRoles"
                           value="@role"
                           @(Model.CurrentRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Users" class="btn btn-secondary">Cancel</a>
    </form>
</div>
