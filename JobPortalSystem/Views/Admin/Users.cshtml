@model IEnumerable<JobPortalSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "_ProfileLayout";
}

<section class="container w-100">
    <h2 class="mb-4">Manage Users</h2>
    <div class="shadow-sm rounded">
        <table id="usersTable" class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>
                            <a asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                <i class="fa-solid fa-user-gear"></i> Edit Roles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable({
                pageLength: 10,
                language: { search: "Search users:" }
            });
        });
    </script>
}
