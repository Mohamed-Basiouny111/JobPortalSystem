@model JobPortalSystem.Controllers.EmployerStatsViewModel
@{
    ViewBag.Title = "Employer Dashboard";
    Layout = "_ProfileLayout";
    int counter = 1;
}
}

<div class="container mt-4">
    <h2>My Dashboard</h2>
    <div class="row text-center mt-3">
        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h4>Total Jobs</h4>
                <h2>@Model.TotalJobs</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h4>Active Jobs</h4>
                <h2>@Model.ActiveJobs</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h4>Closed Jobs</h4>
                <h2>@Model.ClosedJobs</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h4>Total Applicants</h4>
                <h2>@Model.TotalApplicants</h2>
            </div>
        </div>
    </div>
</div>
